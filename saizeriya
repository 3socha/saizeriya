if [ -n "${ALL+x}" ]; then
  if [ -n "${LONG+x}" ]; then
    echo "${MENU}" | sed -E 's/^[^,]*,//'
  else
    echo "${MENU}" | awk -F, '{print $2}'
  fi
else
  if [ -n "${LONG+x}" ]; then
    echo "${MENU}" | shuf -n1 | sed -E 's/^[^,]*,//'
  else
    echo "${MENU}" | shuf -n1 | awk -F, '{print $2}'
  fi
fi
